block title
    title Login

block content
    form(method='POST', action='/login')
        #form-group
            label Username:
            input.form-control(name='username', type='text')
        #form-group
            label Password:
            input.form-control(name='password', type='text')
        input.btn.btn-primary(type='submit', value='Submit')